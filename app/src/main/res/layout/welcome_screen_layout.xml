<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/WelcomeLayoutBottomButtons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/colorWelcomeFont"
            android:background="@color/colorAccent"
            android:text="Login" />

        <Button
            android:id="@+id/button_signUp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="?android:attr/borderlessButtonStyle"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorWelcomeFont"
            android:text="Sign Up" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@id/WelcomeLayoutBottomButtons">

        <ImageView
            android:id="@+id/ImageView_WelcomeScreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/hangeo_app_land"
            android:scaleType="centerCrop"/>
    </LinearLayout>

</RelativeLayout>